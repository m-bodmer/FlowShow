<%= form_for([@software, @software.plugins.build]) do |f| %>
  <div class="field">
    <%= f.label :name, :class => 'subtitles2' %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description, :class => 'subtitles2'%><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :url, :class => 'subtitles2' %><br />
    <%= f.text_area :url %>
  </div>
  <div class="actions">
    <%= f.submit 'Add Plugin', :class => 'round_button'%>
  </div>
<% end %>